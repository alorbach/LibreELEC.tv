busybox passwd "$@" || exit

echo "Copying password file to /flash ..."
PASSWORD="$(awk -F: '/^root:/ {print $2}' /storage/.cache/shadow)"
mount -o remount,rw /flash

cat <<EOF >/flash/password
# LibreELEC password file - DO NOT EDIT THIS FILE
# Delete this file to restore default root password (this is not secure).
PASSWORD:$PASSWORD
EOF

mount -o remount,ro /flash
sync

cat << EOF

Password has been changed.

In case password is forgotten then file
'password' from system partititon
must be removed and default password
will be used.
EOF

